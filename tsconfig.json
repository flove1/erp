{
	"compilerOptions": {
		"target": "ES2023",
		"module": "commonjs",
		"baseUrl": "./src",
		"outDir": "dist",
		"strict": true,
    "strictPropertyInitialization": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
